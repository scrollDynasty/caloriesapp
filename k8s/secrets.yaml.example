# ВАЖНО: Этот файл содержит примеры. 
# Создайте secrets.yaml с реальными значениями и НЕ коммитьте его в git!
# Используйте: kubectl create secret generic app-secrets --from-env-file=secrets.env -n caloriesapp

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: caloriesapp
type: Opaque
stringData:
  # Database
  DB_HOST: "mysql-service"
  DB_USER: "root"
  DB_PASSWORD: "your-secure-password-here"
  
  # JWT
  JWT_SECRET_KEY: "your-very-secure-jwt-secret-key-minimum-64-characters-long"
  
  # OAuth (optional)
  GOOGLE_CLIENT_ID: ""
  GOOGLE_CLIENT_SECRET: ""
  APPLE_CLIENT_ID: ""
  APPLE_TEAM_ID: ""
  APPLE_KEY_ID: ""
  APPLE_PRIVATE_KEY_PATH: ""
  
  # OpenAI
  OPENAI_API_KEY: "sk-proj-your-key-here"
  
  # Yandex Storage
  YANDEX_STORAGE_ACCESS_KEY: "your-access-key"
  YANDEX_STORAGE_SECRET_KEY: "your-secret-key"
  
  # Admin
  ADMIN_USERNAME: "admin"
  ADMIN_PASSWORD: "your-secure-admin-password"

