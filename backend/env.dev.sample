# Development Environment Configuration
ENVIRONMENT=development
DEBUG=true

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=caloriesapp

# API_DOMAIN для dev - используйте ngrok URL для Google OAuth
# Пример: API_DOMAIN=https://abc123.ngrok-free.app
# Или для локальной разработки без OAuth: API_DOMAIN=http://192.168.100.13:8000
API_DOMAIN=http://192.168.100.13:8000

# CORS Configuration (для доступа с мобильного устройства)
# Добавьте ngrok URL в CORS если используете: https://abc123.ngrok-free.app
CORS_ORIGINS=http://192.168.100.13:8000,http://localhost:3000,http://localhost:8081,http://localhost:19006,http://127.0.0.1:8081,http://127.0.0.1:19006,exp://192.168.100.13:8081

# JWT Configuration
JWT_SECRET_KEY=replace_me_with_secure_random_string_64_chars
JWT_ALGORITHM=HS256
# Время жизни токена в минутах: 43200 = 30 дней
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200
# OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI - оставьте пустым, будет использоваться API_DOMAIN
# Или укажите ngrok URL: GOOGLE_REDIRECT_URI=https://abc123.ngrok-free.app/api/v1/auth/google/callback
GOOGLE_REDIRECT_URI=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=

OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30

YANDEX_STORAGE_ACCESS_KEY=your-yandex-storage-access-key-id
YANDEX_STORAGE_SECRET_KEY=your-yandex-storage-secret-key
YANDEX_STORAGE_BUCKET_NAME=caloriesapp
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net
YANDEX_STORAGE_REGION=ru-central1
