DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=caloriesapp

API_DOMAIN=https://api.yeb-ich.com

# JWT Configuration
# ВАЖНО: JWT_SECRET_KEY должен быть надёжным и НЕ МЕНЯТЬСЯ после деплоя!
# Изменение ключа инвалидирует ВСЕ существующие токены пользователей
JWT_SECRET_KEY=replace_me_with_secure_random_string_64_chars
JWT_ALGORITHM=HS256
# Время жизни токена в минутах: 43200 = 30 дней
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://api.yeb-ich.com/api/v1/auth/google/callback
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30