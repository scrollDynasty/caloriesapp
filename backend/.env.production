# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Calories App Backend - api.yeb-ich.com
# ==========================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Database (MariaDB/MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=caloriesapp
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
DB_NAME=caloriesapp

# Server
HOST=0.0.0.0
PORT=8000

# API Domain
API_DOMAIN=https://api.yeb-ich.com

# CORS Origins (разделенные запятыми)
CORS_ORIGINS=https://api.yeb-ich.com,http://localhost:3000

# JWT Configuration
# ВАЖНО: Сгенерируйте безопасный секретный ключ:
# python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=YOUR_SECURE_JWT_SECRET_HERE
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ==========================================
# Google OAuth Configuration
# ==========================================
# 1. Перейдите в Google Cloud Console: https://console.cloud.google.com/
# 2. APIs & Services → Credentials
# 3. Создайте OAuth 2.0 Client ID (тип: Web application)
# 4. В "Authorized redirect URIs" добавьте:
#    https://api.yeb-ich.com/api/v1/auth/google/callback
# 5. Скопируйте Client ID и Client Secret сюда:

GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=https://api.yeb-ich.com/api/v1/auth/google/callback

# ==========================================
# Apple OAuth Configuration (optional)
# ==========================================
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=
